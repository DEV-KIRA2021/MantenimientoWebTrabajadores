@model List<TrabajadoresPrueba.Models.Trabajadores>

<h2 class="mb-3"> ::: LISTADO DE TRABAJADORES ::: </h2>

@{
    var sexoSeleccionado = ViewBag.SexoSeleccionado as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <button class="btn btn-success btn-Nuevo" data-bs-toggle="modal" data-bs-target="#modalCrear">
        <i class="bi bi-person-plus"></i> Nuevo Trabajador
    </button>

    <form method="get" action="/Trabajador/Index" class="d-flex align-items-center gap-2">
        <label class="mb-0">Filtrar por sexo:</label>
        <select name="sexo" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
            @Html.Raw($"<option value=\"\" {(string.IsNullOrEmpty(sexoSeleccionado) ? "selected" : "")}>-- Todos --</option>")
            @Html.Raw($"<option value=\"M\" {(sexoSeleccionado == "M" ? "selected" : "")}>Masculino</option>")
            @Html.Raw($"<option value=\"F\" {(sexoSeleccionado == "F" ? "selected" : "")}>Femenino</option>")
        </select>
    </form>

    <div>
        <p class="mb-0">Cantidad hombres: <strong>@ViewBag.CantidadHombres</strong></p>
        <p class="mb-0">Cantidad mujeres: <strong>@ViewBag.CantidadMujeres</strong></p>
    </div>
</div>

<table class="table table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>Tipo Documento</th>
            <th>N° Documento</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Sexo</th>
            <th>Fecha Nacimiento</th>
            <th>Dirección</th>
            <th>Foto</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr style="background-color:@(t.Sexo == "M" ? "#007BFF" : "#FF5733"); color:white;">
                <td>@t.TipoDocumento</td>
                <td>@t.NumeroDocumento</td>
                <td>@t.Nombres</td>
                <td>@t.Apellido</td>
                <td>@(t.Sexo == "M" ? "Masculino" : "Femenino")</td>
                <td>@t.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                <td>@t.Direccion</td>
                <td>
                    @if (!string.IsNullOrEmpty(t.Foto))
                    {
                        <img src="@t.Foto" alt="Foto" style="width:60px;height:60px;object-fit:cover;border-radius:50%;" />
                    }
                    else
                    {
                        <span class="text-muted">Sin foto</span>
                    }
                </td>

                <td>
                    <a href="#" class="btn btn-sm text-dark btn-editar" data-id="@t.Id" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a href="#" class="btn btn-sm text-dark btn-eliminar" data-id="@t.Id" data-nombre="@t.Nombres" title="Eliminar">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Crear/Editar Trabajador -->
<div class="modal fade" id="modalCrear" tabindex="-1" aria-labelledby="modalCrearLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="Create" method="post" id="formTrabajador" enctype="multipart/form-data">
                <input type="hidden" name="Id" id="Id" value="0" />
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="tituloModal">Crear Trabajador</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label>Tipo Documento</label>
                            <select name="TipoDocumento" id="TipoDocumento" class="form-select" required>
                                <option value="">-- Seleccione --</option>
                                <option value="DNI">DNI</option>
                                <option value="CE">CE</option>
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label>Número Documento</label>
                            <input type="text" name="NumeroDocumento" id="NumeroDocumento" class="form-control" required />
                        </div>

                        <div class="col-md-4">
                            <label>Sexo</label>
                            <select name="Sexo" id="Sexo" class="form-select" required>
                                <option value="">-- Seleccione --</option>
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label>Nombres</label>
                            <input type="text" name="Nombres" id="Nombres" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label>Apellidos</label>
                            <input type="text" name="Apellido" id="Apellido" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label>Fecha de Nacimiento</label>
                            <input type="date" name="FechaNacimiento" id="FechaNacimiento" class="form-control" required />
                        </div>

                        <div class="col-md-12">
                            <label>Foto</label>
                            <input type="file" name="FotoFile" id="FotoFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="col-md-12">
                            <label>Dirección</label>
                            <input type="text" name="Direccion" id="Direccion" class="form-control" required />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" id="btnSubmit">Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Confirmar Eliminación -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="Delete">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" id="deleteId" />
                    <p>¿Está seguro que desea eliminar al trabajador <strong id="deleteNombre"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Nuevo
            $('.btn-Nuevo').click(function () {
                $('#formTrabajador')[0].reset();
                $('#Id').val(0);
                $('#tituloModal').text('Crear Trabajador');
                $('#btnSubmit').text('Guardar');
            });

            // Editar
            $('.btn-editar').click(function (e) {
                e.preventDefault();
                const id = $(this).data('id');
                $.get('/Trabajador/GetTrabajador?id=' + id, function (data) {
                    $('#Id').val(data.id);
                    $('#TipoDocumento').val(data.tipoDocumento);
                    $('#NumeroDocumento').val(data.numeroDocumento);
                    $('#Nombres').val(data.nombres);
                    $('#Apellido').val(data.apellido);
                    $('#Sexo').val(data.sexo);
                    $('#FechaNacimiento').val(data.fechaNacimiento.split('T')[0]);
                    $('#Direccion').val(data.direccion);
                    $('#Foto').val(data.foto);

                    $('#tituloModal').text('Editar Trabajador');
                    $('#btnSubmit').text('Actualizar');

                    new bootstrap.Modal(document.getElementById('modalCrear')).show();
                });
            });

            // Eliminar
            $('.btn-eliminar').click(function () {
                const id = $(this).data('id');
                const nombre = $(this).data('nombre');
                $('#deleteId').val(id);
                $('#deleteNombre').text(nombre);
                new bootstrap.Modal(document.getElementById('modalEliminar')).show();
            });
        });
    </script>
}
